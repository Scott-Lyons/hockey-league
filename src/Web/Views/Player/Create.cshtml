@model Web.Models.PlayerModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Player</h2>
<form method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
    </div>
    <div class="form-group">
        <label for="Position">Position:</label>
        @Html.DropDownListFor(m => m.PositionIdx, new SelectList(Model.PlayerPositions, "Idx", "Name"), new {@class = "form-control"})
    </div>
    <div class="form-group">
        <label for="TimeInTeam">Time In Team:</label>
        @Html.TextBoxFor(m => m.TimeInTeam, "{0:dd/MM/yyyy}", new {@class = "form-control datepicker"})
    </div>
    <input type="submit" value="Create" />
    
    <script type="text/javascript">
        $(function() {
            $(".datepicker").datepicker({dateFormat: 'dd/mm/yy'});
        });
    </script>
</form>
